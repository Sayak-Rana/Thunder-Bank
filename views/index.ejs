<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="favicon.ico?v=1.1">
    <link rel="stylesheet" href="style.css" />
    <script src="https://kit.fontawesome.com/bdd89edb33.js"></script>
    <script src="https://kit.fontawesome.com/1e2c9bf03f.js" crossorigin="anonymous"></script>
    <link
      href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900"
      rel="stylesheet"
    />
    <title>Thunder Bank</title>
  </head>
  <body>
    <%- include('nav') -%>
    <div class="content">
      <h1 class="welcome">üôè Welcome to Thunder Bank üôè </h1>
    <div class="slideshow-container">

      <div class="mySlides fade">
        <div class="numbertext">1 / 3</div>
        <img src="img.jpg" style="width:100%">
        <div class="text"></div>
      </div>
      
      <div class="mySlides fade">
        <div class="numbertext">2 / 3</div>
        <img src="img1.jpg" style="width:100%">
        <div class="text"></div>
      </div>
      
      <div class="mySlides fade">
        <div class="numbertext">3 / 3</div>
        <img src="img2.jpg" style="width:100%">
        <div class="text"></div>
      </div>
      
      </div>
      <br>
      
      <div style="text-align:center">
        <span class="dot"></span> 
        <span class="dot"></span> 
        <span class="dot"></span> 
      </div>
    </div>
  
      
      
    <div class="container">
      <section class="section-plans" id="section-plans">
        <div class="u-center-text u-margin-bottom-big">
          <h2 class="heading-secondary">
            SALIENT FEATURES
          </h2>
        </div>
  
        <div class="row">
          <div class="col-1-of-3">
            <div class="card">
              <div class="card__side card__side--front-1">
                <div class="card__title card__title--1">
                  <i class="fa-5x fas fa-users"></i>
                  <h4 class="card__heading">USERS</h4>
                </div>
  
                <div class="card__details">
                  <ul>
                    <li></li>
                    <li>Click select to view details of all customers of the Bank</li>
                    <li></li>
                  </ul>
                </div>
              </div>
              <div class="card__side card__side--back card__side--back-1">
                <div class="card__cta">
                  <div class="card__price-box">
                    <p class="card__price-only">Press</p>
                    <p class="card__price-value">Select</p>
                  </div>
                  <a href="/customers" class="btn btn--white">Select</a>
                </div>
              </div>
            </div>
          </div>
  
          <div class="col-1-of-3">
            <div class="card">
              <div class="card__side card__side--front-2">
                <div class="card__title card__title--2">
                  <i class="fas fa-rupee-sign"></i>
                  <h4 class="card__heading">TRANSFER</h4>
                </div>
  
                <div class="card__details">
                  <ul>
                    <li></li>
                    <li>Click select to send money to another user in this Bank</li>
                    <li></li>
                  </ul>
                </div>
              </div>
              <div class="card__side card__side--back card__side--back-2">
                <div class="card__cta">
                  <div class="card__price-box">
                    <p class="card__price-only">PRESS</p>
                    <p class="card__price-value">Select</p>
                  </div>
                  <a href="/sendmoney" class="btn btn--white">Select</a>
                </div>
              </div>
            </div>
          </div>
  
          <div class="col-1-of-3">
            <div class="card">
              <div class="card__side card__side--front-3">
                <div class="card__title card__title--3">
                  <i class="fas fa-history"></i>
                  <h4 class="card__heading">HISTORY</h4>
                </div>
  
                <div class="card__details">
                  <ul>
                    <li></li>
                    <li>Click select to see transaction history of users</li>
                    <li></li>
                  </ul>
                </div>
              </div>
              <div class="card__side card__side--back card__side--back-3">
                <div class="card__cta">
                  <div class="card__price-box">
                    <p class="card__price-only">PRESS</p>
                    <p class="card__price-value">Select</p>
                  </div>
                  <a href="/transactions" class="btn btn--white">Select</a>
                </div>
              </div>
            </div>
          </div>
        </div>
  
        <div class="u-center-text u-margin-top-huge">
          <!-- <a href="#" class="btn btn--green">Get Started</a> -->
        </div>
      </section>

    </div>
    <script>
        
      var slideIndex = 0;
      showSlides();
      
      function showSlides() {
        var i;
        var slides = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("dot");
        for (i = 0; i < slides.length; i++) {
          slides[i].style.display = "none";  
        }
        slideIndex++;
        if (slideIndex > slides.length) {slideIndex = 1}    
        for (i = 0; i < dots.length; i++) {
          dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex-1].style.display = "block";  
        dots[slideIndex-1].className += " active";
        setTimeout(showSlides, 2000); // Change image every 2 seconds
      }
      </script>
      </div>
  </body>
</html>
